{
    "name": "leinonen/php-dataloader",
    "type": "library",
    "description": "Port of Facebook's dataloader to PHP",
    "keywords": ["batch loading", "dataloader", "graphql"],
    "require": {
        "react/promise": "^2.7.1",
        "react/event-loop": "^1.1.0",
        "php": "^7.3.0"
    },
    "require-dev" : {
        "phpunit/phpunit": "^8.0.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Juuso Leinonen",
            "email": "leinonen.juuso@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "leinonen\\DataLoader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "leinonen\\DataLoader\\Tests\\": "tests/"
        }
    },
    "scripts" : {
        "post-install-cmd" : [
            "cp -n phpunit.xml.dist phpunit.xml"
        ]
    }
}
